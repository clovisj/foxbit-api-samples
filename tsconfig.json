{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "sourceMap": false, 
      "outDir": "./dist", 
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "/opt/*": [
          "./src/layer/*"
        ]
      }
    },
    "include": [
      "./src/**/*"
    ]
  }